            <Border BorderBrush="Black" BorderThickness="4, 4, 4, 4" Margin="0,-3,0,3"/>

            <Label Content="Сила" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Height="37" Width="62" FontSize="20" FontFamily="Bookman Old Style"/>
            <Label Content="Ловкость" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="37" Width="103" FontSize="20" FontFamily="Bookman Old Style"/>
            <Label Content="Интеллект" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Height="37" Width="114" FontSize="20" FontFamily="Bookman Old Style"/>
            <Label Content="Выносливость" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Height="37" Width="156" FontSize="20" FontFamily="Bookman Old Style"/>
            <Label Content="250" HorizontalAlignment="Left" Margin="196,7,0,0" VerticalAlignment="Top" Height="24"/>
        </Grid>
    </Grid>
</Window>
