        <Label x:Name="baseExp" Content="10 Exp" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Margin="64,32,0,0" VerticalAlignment="Top" Width="90" FontStretch="Normal" FontSize="16"/>
